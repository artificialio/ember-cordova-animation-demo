{{#liquid-with model controller="posts.post" use="toLeft"}}
  {{#link-to 'posts.post' 1}}Post{{/link-to}}
  {{#if isEditing}}
    {{!partial 'post-edit'}}
    <button {{action 'doneEditing'}}>Done</button>
  {{else}}
    <button {{action 'edit'}}>Edit</button>
  {{/if}}

  <h1>{{title}}</h1>
  <h2>by {{author}} <small class='muted'>({{date}})</small></h2>

  <hr>

  <div class='intro'>
    {{excerpt}}
  </div>

  <div class='below-the-fold'>
    {{body}}
  </div>
{{/liquid-with}}